<html>
    <head>
        <style>
            body{
                margin: 0;
                padding: 0;
            }
            .header{
                display: flex;
                justify-content: flex-end;
                background-color: #eee;
            }
            .login > a, .signin > a{
                text-decoration: none;
                font-family: sans-serif;
                padding: 20px;
                display: inline-block;
                font-size: 18px;
                color: #333;
                transition: 0.5s;
            }
            .login > a:hover, .signin > a:hover{
                background-color: rgba(0,0,0,0.4);
                color: white;
            }
        </style>
    </head>
    <body>
        <div class="header">
            <div class="login">
                <a href="/login">
                    <span>
                        login
                    </span>
                </a>
            </div>
            <div class="signin">
                <a href="/signup">
                    <span>
                        signup
                    </span>
                </a>
            </div>
        </div>
    </body>
</html>